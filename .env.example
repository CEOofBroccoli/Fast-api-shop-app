# Application Settings
DEBUG=0
ENVIRONMENT=production
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://app_write:writeuser@db:5432/inventory_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=inventory_db
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# Security
JWT_SECRET_KEY=your_very_long_secure_random_key_here_at_least_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Admin User (will be created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_secure_password
ADMIN_EMAIL=admin@example.com

# Database Roles
APP_READ_PASSWORD=readuser_secure_password
APP_WRITE_PASSWORD=writeuser_secure_password

# Web Server
NGINX_PORT=80
NGINX_SSL_PORT=443

# PGAdmin (development only)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=pgadmin_password
PGADMIN_PORT=5050
